<div class="space-y-8">
  <div class="text-center">
    <h2 class="auth-title text-3xl font-bold text-slate-900">
      Editar perfil
    </h2>
    <p class="mt-2 text-sm text-slate-600">
      Atualize suas informações de conta
    </p>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-5" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, "E-mail", class: "block text-sm font-medium text-slate-700 mb-2" %>
      <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          class: "w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all outline-none" %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p class="mt-2 text-xs text-amber-700">
          Aguardando confirmação para: <%= resource.unconfirmed_email %>
        </p>
      <% end %>
    </div>

    <div class="pt-4 border-t border-slate-200">
      <p class="text-sm font-medium text-slate-700 mb-4">Alterar senha</p>

      <div class="space-y-4">
        <div>
          <%= f.label :password, "Nova senha", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <p class="text-xs text-slate-500 mb-2">
            (Deixe em branco se não quiser alterar)
            <% if @minimum_password_length %>
              · Mínimo de <%= @minimum_password_length %> caracteres
            <% end %>
          </p>
          <%= f.password_field :password,
              autocomplete: "new-password",
              class: "w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all outline-none",
              placeholder: "••••••••" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirme a nova senha", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= f.password_field :password_confirmation,
              autocomplete: "new-password",
              class: "w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all outline-none",
              placeholder: "••••••••" %>
        </div>
      </div>
    </div>

    <div>
      <%= f.label :current_password, "Senha atual", class: "block text-sm font-medium text-slate-700 mb-2" %>
      <p class="text-xs text-slate-500 mb-2">
        (Precisamos da sua senha atual para confirmar as alterações)
      </p>
      <%= f.password_field :current_password,
          autocomplete: "current-password",
          required: true,
          class: "w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all outline-none",
          placeholder: "••••••••" %>
    </div>

    <div>
      <%= f.submit "Atualizar", class: "w-full px-4 py-3 bg-amber-600 text-white font-semibold rounded-lg hover:bg-amber-700 focus:ring-4 focus:ring-amber-300 transition-all cursor-pointer" %>
    </div>
  <% end %>

  <div class="pt-6 border-t border-slate-200">
    <div class="bg-rose-50 border border-rose-200 rounded-lg p-5">
      <h3 class="text-lg font-semibold text-rose-900 mb-2">Zona de perigo</h3>
      <p class="text-sm text-rose-700 mb-4">
        Ao cancelar sua conta, todos os seus dados serão permanentemente removidos. Esta ação não pode ser desfeita.
      </p>
      <%= button_to "Cancelar minha conta",
          registration_path(resource_name),
          data: { confirm: "Tem certeza? Esta ação não pode ser desfeita.", turbo_confirm: "Tem certeza? Esta ação não pode ser desfeita." },
          method: :delete,
          class: "w-full px-4 py-3 bg-rose-600 text-white font-semibold rounded-lg hover:bg-rose-700 focus:ring-4 focus:ring-rose-300 transition-all cursor-pointer" %>
    </div>
  </div>

  <div class="text-center">
    <%= link_to "Voltar", :back, class: "text-sm text-slate-600 hover:text-amber-700 transition-colors" %>
  </div>
</div>
