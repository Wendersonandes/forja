<% content_for :title, "Curses" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Curses</h1>
    <%= link_to "New curse", new_curse_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="curses" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% if @curses.any? %>
      <% @curses.each do |curse| %>
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 flex flex-col h-full border border-gray-100">
          <% if curse.cover.attached? %>
            <%= image_tag curse.cover, class: "w-full h-48 object-cover" %>
          <% else %>
            <div class="w-full h-48 bg-gray-200 flex items-center justify-center text-gray-400">
              <span class="text-3xl">ğŸ–¼ï¸</span>
            </div>
          <% end %>
          
          <div class="p-5 flex-1 flex flex-col">
            <h2 class="text-xl font-bold text-gray-900 mb-2 line-clamp-2">
              <%= link_to curse.title, curse, class: "hover:text-blue-600 transition-colors" %>
            </h2>
            
            <div class="text-sm text-gray-600 mb-4 flex-1">
              <% if curse.about.present? %>
                <div class="line-clamp-3 mb-2"><%= curse.about %></div>
              <% end %>
              <div class="flex items-center mt-2">
                <svg class="h-4 w-4 text-gray-400 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span><%= curse.city %>, <%= curse.state %></span>
              </div>
            </div>

            <div class="mt-4 pt-4 border-t border-gray-100 flex justify-between items-center">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= curse.practical? ? 'bg-blue-100 text-blue-800' : 'bg-purple-100 text-purple-800' %>">
                <%= curse.curse_type&.humanize %>
              </span>
              <%= link_to "View Details", curse, class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="col-span-full text-center py-12 bg-gray-50 rounded-lg border-2 border-dashed border-gray-300">
        <p class="text-gray-500 text-lg">No curses found.</p>
        <p class="text-gray-400 text-sm mt-1">Get started by creating a new one!</p>
      </div>
    <% end %>
  </div>
</div>
