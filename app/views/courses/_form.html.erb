<%= form_with(model: course, class: "contents", data: { controller: "form-preview", action: "input->form-preview#remotesubmit trix-change->form-preview#remotesubmit" }) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul class="list-disc ml-6">
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :cover %>
    <%= form.file_field :cover, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": course.errors[:cover].none?, "border-red-400 focus:outline-red-600": course.errors[:cover].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full form-control", {"border-gray-400 focus:outline-blue-600": course.errors[:title].none?, "border-red-400 focus:outline-red-600": course.errors[:title].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :about %>
    <%= form.rich_textarea :about, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": course.errors[:about].none?, "border-red-400 focus:outline-red-600": course.errors[:about].any?}] %>
      <div>
        Acrescente aqui uma apresentação do curso, o que será ensinado e a duração do mesmo.
      </div>
  </div>
  <div class="grid grid-cols-2 gap-4">
    <div class="my-5">
      <%= form.label :start_date %>
      <%= form.datetime_field :start_date, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": course.errors[:start_date].none?, "border-red-400 focus:outline-red-600": course.errors[:start_date].any?}] %>
    </div>

    <div class="my-5">
      <%= form.label :end_date %>
      <%= form.datetime_field :end_date, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": course.errors[:end_date].none?, "border-red-400 focus:outline-red-600": course.errors[:end_date].any?}] %>
    </div>

  </div>
  <div class="my-5">
    <%= form.label :course_type %>
    <%= form.select :course_type, options_for_select(Course.course_types.map {|key, value| [key.titleize, Course.course_types.key(value)]}, course.course_type) %>
  </div>
  <div class="my-5">
    <%= form.label :address %>
    <%= form.text_field :address, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": course.errors[:address].none?, "border-red-400 focus:outline-red-600": course.errors[:address].any?}] %>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div class="my-5">
      <%= form.label :city %>
      <%= form.text_field :city, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": course.errors[:city].none?, "border-red-400 focus:outline-red-600": course.errors[:city].any?}] %>
    </div>

    <div class="my-5">
      <%= form.label :state %>
      <%= form.text_field :state, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": course.errors[:state].none?, "border-red-400 focus:outline-red-600": course.errors[:state].any?}] %>
    </div>
  </div>
  <div class="my-5">
    <%= form.label :apply_url %>
    <%= form.text_field :apply_url, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": course.errors[:apply_url].none?, "border-red-400 focus:outline-red-600": course.errors[:apply_url].any?}] %>
  </div>
  <div class="fixed bottom-0 left-0 right-0">
    <%= form.button "Preview Course", formaction: preview_courses_path, name: "_method", value: "post", data: { form_preview_target: "submitbtn" } %>
    <%= form.submit "Publicar meu Curso", class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
