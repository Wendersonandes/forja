<div class="mt-6 space-y-3 text-center text-sm">
  <%- if controller_name != 'sessions' %>
    <div>
      <%= link_to "Já tem conta? Entrar", new_session_path(resource_name), class: "text-amber-700 hover:text-amber-800 font-medium transition-colors" %>
    </div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div>
      <%= link_to "Criar uma conta", new_registration_path(resource_name), class: "text-amber-700 hover:text-amber-800 font-medium transition-colors" %>
    </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div>
      <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "text-slate-600 hover:text-amber-700 transition-colors" %>
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div>
      <%= link_to "Não recebeu as instruções de confirmação?", new_confirmation_path(resource_name), class: "text-slate-600 hover:text-amber-700 transition-colors" %>
    </div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div>
      <%= link_to "Não recebeu as instruções de desbloqueio?", new_unlock_path(resource_name), class: "text-slate-600 hover:text-amber-700 transition-colors" %>
    </div>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <div>
        <%= button_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full px-4 py-2 bg-slate-100 text-slate-700 rounded-lg hover:bg-slate-200 transition-colors font-medium" %>
      </div>
    <% end %>
  <% end %>
</div>
